# EditorConfig: http://editorconfig.org
# Global EditorConfig
# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
indent_size = 4

[git*,.git/config]
indent_style = tab
indent_size = 2

[*.sublime*]
indent_style = tab
indent_size = 2

[*.*rc]
indent_style = tab
indent_size = 2
